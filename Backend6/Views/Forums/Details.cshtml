@model Backend6.Models.Forum

@{
    ViewData["Title"] = "Forum";
}

<h2>@Model.Name</h2>
<p>@Model.Description</p>

@if(User.Identity.IsAuthenticated)
{
    <p><a asp-action="Create" asp-controller="ForumTopics" asp-route-forumId="@Model.Id">Create new topic</a></p>
}

<div class="panel panel-default">
    <table class="table table-striped">
        <tbody>
            @if (Model.ForumTopics != null)
            {
                @foreach (var i in Model.ForumTopics.OrderByDescending(x => x.Created))
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-controller="ForumTopics" asp-route-id="@i.Id" style="font-size: 1.3em">@i.Name</a><br />
                            @i.Creator.UserName, @i.Created
                        </td>
                        @if (i.ForumMessages.Count() > 0)
                        {
                            <td style="width: 100px">
                                @i.ForumMessages.Count() replies
                            </td>
                            <td style="width: 220px">
                                @i.ForumMessages.Last().Creator.UserName<br />
                                @i.ForumMessages.Last().Modified
                            </td>
                        }
                        else
                        {
                            <td style="width: 100px">
                                0 replies
                            </td>
                            <td style="width: 220px">
                                @i.Creator.UserName<br />
                                @i.Created
                            </td>
                        }
                    </tr>

                }
            }
        </tbody>
    </table>
</div>

